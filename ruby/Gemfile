# frozen_string_literal: true

source 'https://rubygems.org'

gemspec

# For monorepo development, prefer the local lexer_kit checkout.
# Outside this repo layout, resolve from RubyGems via gemspec dependency.
if File.directory?(File.expand_path('../../lexer_kit', __dir__))
  gem 'lexer_kit', path: '../../lexer_kit'
end

group :development, :test do
  gem 'rake', '~> 13.0'
  gem 'rspec', '~> 3.12'
  gem 'rubocop', '~> 1.50'
  gem 'rubocop-rspec', '~> 2.22'
  gem 'simplecov', '~> 0.22', require: false
end
